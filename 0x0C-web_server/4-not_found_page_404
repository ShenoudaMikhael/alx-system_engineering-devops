#!/usr/bin/env bash
#  4. Not found page 404 



sudo apt-get update
sudo apt-get -y install nginx


sudo chown -R "$USER":"$USER" /var/www/html/

echo 'Hello World!' > /var/www/html/index.html
sudo chown -R "$USER":"$USER" /etc/nginx/sites-available/


red="\rewrite ^/redirect_me https://TheDreamCatcher permanent;"
sudo sed -i "26i $red" /etc/nginx/sites-available/default

echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/404.html
line="\error_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /usr/share/nginx/html;\n\t\tinternal;\n\t}"
sudo sed -i "27i $line" /etc/nginx/sites-available/default
if [[ $(pgrep nginx) ]]; then
    sudo nginx -s reload
else
    sudo service nginx start
fi